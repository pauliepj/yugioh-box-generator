{
  "name": "yugioh-box-generator",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.paulocaust.yugiohboxgenerator",
    "icon": "assets/icon.ico",
    "productName": "Yu-Gi-Oh! Box Generator",
    "files": [
      "**/*",
      "sets/**",
      "allSets.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
